{
    "version": 8,
    "name": "OSM Bright",
    "metadata": {
        "mapbox:autocomposite": false,
        "openmaptiles:version": "3.x"
    },
    "sources": {
        "openmaptiles": {
            "type": "vector",
            "url": "mbtiles://{canada}"
        }
    },
    "sprite": "",
    "glyphs": "{fontstack}/{range}.pbf",
    "layers": [
        {
            "id": "background",
            "type": "background",
            "paint": {
                "background-color": "#f2efe9"
            }
        },
        {
            "id": "landcover-ice",
            "type": "fill",
            "source": "openmaptiles",
            "source-layer": "landcover",
            "filter": [
                "==",
                "subclass",
                "ice_shelf"
            ],
            "paint": {
                "fill-color": "#fff"
            }
        },
        {
            "id": "landcover-wood",
            "type": "fill",
            "source": "openmaptiles",
            "source-layer": "landcover",
            "filter": [
                "==",
                "class",
                "wood"
            ],
            "paint": {
                "fill-antialias": false,
                "fill-color": "#6a4",
                "fill-opacity": 0.1
            }
        },
        {
            "id": "landcover-grass",
            "type": "fill",
            "source": "openmaptiles",
            "source-layer": "landcover",
            "filter": [
                "==",
                "class",
                "grass"
            ],
            "paint": {
                "fill-antialias": false,
                "fill-color": "#d8e8c8",
                "fill-opacity": 0.3
            }
        },
        {
            "id": "park",
            "type": "fill",
            "source": "openmaptiles",
            "source-layer": "park",
            "paint": {
                "fill-color": "#d8e8c8",
                "fill-opacity": 0.7,
                "fill-outline-color": "#6a4"
            }
        },
        {
            "id": "water",
            "type": "fill",
            "source": "openmaptiles",
            "source-layer": "water",
            "paint": {
                "fill-color": "#a0c8f0"
            }
        },
        {
            "id": "waterway-river",
            "type": "line",
            "source": "openmaptiles",
            "source-layer": "waterway",
            "filter": [
                "==",
                "class",
                "river"
            ],
            "paint": {
                "line-color": "#a0c8f0",
                "line-width": [
                    "interpolate",
                    [
                        "linear"
                    ],
                    [
                        "zoom"
                    ],
                    8,
                    1,
                    14,
                    3
                ]
            }
        },
        {
            "id": "waterway-stream",
            "type": "line",
            "source": "openmaptiles",
            "source-layer": "waterway",
            "filter": [
                "==",
                "class",
                "stream"
            ],
            "paint": {
                "line-color": "#a0c8f0",
                "line-width": [
                    "interpolate",
                    [
                        "linear"
                    ],
                    [
                        "zoom"
                    ],
                    10,
                    0.5,
                    14,
                    2
                ]
            }
        },
        {
            "id": "aeroway-runway",
            "type": "line",
            "source": "openmaptiles",
            "source-layer": "aeroway",
            "filter": [
                "==",
                "class",
                "runway"
            ],
            "paint": {
                "line-color": "#888",
                "line-width": [
                    "interpolate",
                    [
                        "linear"
                    ],
                    [
                        "zoom"
                    ],
                    10,
                    1,
                    14,
                    4
                ]
            }
        },
        {
            "id": "boundary-country",
            "type": "line",
            "source": "openmaptiles",
            "source-layer": "boundary",
            "filter": [
                "==",
                "admin_level",
                2
            ],
            "paint": {
                "line-color": "#8080a0",
                "line-width": 2,
                "line-dasharray": [
                    4,
                    2
                ]
            }
        },
        {
            "id": "boundary-state",
            "type": "line",
            "source": "openmaptiles",
            "source-layer": "boundary",
            "filter": [
                "==",
                "admin_level",
                4
            ],
            "paint": {
                "line-color": "#a0a0c0",
                "line-width": 1,
                "line-dasharray": [
                    3,
                    1
                ]
            }
        },
        {
            "id": "road-service-track",
            "type": "line",
            "source": "openmaptiles",
            "source-layer": "transportation",
            "filter": [
                "in",
                "class",
                "service",
                "track"
            ],
            "layout": {
                "line-cap": "round",
                "line-join": "round"
            },
            "paint": {
                "line-color": "#fff",
                "line-width": [
                    "interpolate",
                    [
                        "linear"
                    ],
                    [
                        "zoom"
                    ],
                    11,
                    0.5,
                    16,
                    2
                ]
            }
        },
        {
            "id": "road-minor",
            "type": "line",
            "source": "openmaptiles",
            "source-layer": "transportation",
            "filter": [
                "==",
                "class",
                "minor"
            ],
            "layout": {
                "line-cap": "round",
                "line-join": "round"
            },
            "paint": {
                "line-color": "#fff",
