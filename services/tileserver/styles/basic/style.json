{
    "version": 8,
    "name": "Basic",
    "metadata": {},
    "sources": {
        "openmaptiles": {
            "type": "vector",
            "url": "mbtiles://{ontario}"
        }
    },
    "sprite": "",
    "glyphs": "{fontstack}/{range}.pbf",
    "layers": [
        {
            "id": "background",
            "type": "background",
            "paint": {
                "background-color": "#f8f4f0"
            }
        },
        {
            "id": "water",
            "type": "fill",
            "source": "openmaptiles",
            "source-layer": "water",
            "paint": {
                "fill-color": "#a0c8f0"
            }
        },
        {
            "id": "waterway",
            "type": "line",
            "source": "openmaptiles",
            "source-layer": "waterway",
            "paint": {
                "line-color": "#a0c8f0",
                "line-width": 1
            }
        },
        {
            "id": "landcover-grass",
            "type": "fill",
            "source": "openmaptiles",
            "source-layer": "landcover",
            "filter": [
                "==",
                "class",
                "grass"
            ],
            "paint": {
                "fill-color": "#d8e8c8",
                "fill-opacity": 0.6
            }
        },
        {
            "id": "landcover-wood",
            "type": "fill",
            "source": "openmaptiles",
            "source-layer": "landcover",
            "filter": [
                "==",
                "class",
                "wood"
            ],
            "paint": {
                "fill-color": "#a0d8a0",
                "fill-opacity": 0.5
            }
        },
        {
            "id": "landuse-park",
            "type": "fill",
            "source": "openmaptiles",
            "source-layer": "park",
            "paint": {
                "fill-color": "#c8e8c0",
                "fill-opacity": 0.6
            }
        },
        {
            "id": "boundary-country",
            "type": "line",
            "source": "openmaptiles",
            "source-layer": "boundary",
            "filter": [
                "==",
                "admin_level",
                2
            ],
            "paint": {
                "line-color": "#8080a0",
                "line-width": 2,
                "line-dasharray": [
                    4,
                    2
                ]
            }
        },
        {
            "id": "boundary-state",
            "type": "line",
            "source": "openmaptiles",
            "source-layer": "boundary",
            "filter": [
                "==",
                "admin_level",
                4
            ],
            "paint": {
                "line-color": "#a0a0c0",
                "line-width": 1,
                "line-dasharray": [
                    2,
                    2
                ]
            }
        },
        {
            "id": "road-motorway",
            "type": "line",
            "source": "openmaptiles",
            "source-layer": "transportation",
            "filter": [
                "==",
                "class",
                "motorway"
            ],
            "paint": {
                "line-color": "#fc8",
                "line-width": [
                    "interpolate",
                    [
                        "linear"
                    ],
                    [
                        "zoom"
                    ],
                    5,
                    1,
                    12,
                    4
                ]
            }
        },
        {
            "id": "road-trunk",
            "type": "line",
            "source": "openmaptiles",
            "source-layer": "transportation",
            "filter": [
                "==",
                "class",
                "trunk"
            ],
            "paint": {
                "line-color": "#fda",
                "line-width": [
                    "interpolate",
                    [
                        "linear"
                    ],
                    [
                        "zoom"
                    ],
                    6,
                    0.5,
                    12,
                    3
                ]
            }
        },
        {
            "id": "road-primary",
            "type": "line",
            "source": "openmaptiles",
            "source-layer": "transportation",
            "filter": [
                "==",
                "class",
                "primary"
            ],
            "paint": {
                "line-color": "#ffc",
                "line-width": [
                    "interpolate",
                    [
                        "linear"
                    ],
                    [
                        "zoom"
                    ],
                    7,
                    0.5,
                    12,
                    2.5
                ]
            }
        },
        {
            "id": "road-secondary",
            "type": "line",
            "source": "openmaptiles",
            "source-layer": "transportation",
            "filter": [
                "==",
                "class",
                "secondary"
            ],
            "paint": {
                "line-color": "#fff",
                "line-width": [
                    "interpolate",
                    [
                        "linear"
                    ],
                    [
                        "zoom"
                    ],
                    8,
                    0.5,
                    12,
                    2
                ]
            }
        },
        {
            "id": "road-minor",
            "type": "line",
            "source": "openmaptiles",
            "source-layer": "transportation",
            "filter": [
                "in",
                "class",
                "tertiary",
                "minor",
                "service"
            ],
            "paint": {
                "line-color": "#fff",
                "line-width": [
                    "interpolate",
                    [
                        "linear"
                    ],
                    [
                        "zoom"
                    ],
                    10,
                    0.3,
                    12,
                    1
                ]
            }
        },
        {
            "id": "building",
            "type": "fill",
            "source": "openmaptiles",
            "source-layer": "building",
            "minzoom": 12,
            "paint": {
                "fill-color": "#d9d0c9",
                "fill-outline-color": "#b9b0a9"
            }
        },
        {
            "id": "place-city",
            "type": "symbol",
            "source": "openmaptiles",
            "source-layer": "place",
            "filter": [
                "==",
                "class",
                "city"
            ],
            "layout": {
                "text-field": "{name}",
                "text-size": 14,
                "text-font": [
                    "Noto Sans Regular"
                ]
            },
            "paint": {
                "text-color": "#333",
                "text-halo-color": "#fff",
                "text-halo-width": 1.5
            }
        },
        {
            "id": "place-town",
            "type": "symbol",
            "source": "openmaptiles",
            "source-layer": "place",
            "filter": [
                "==",
                "class",
                "town"
            ],
            "layout": {
                "text-field": "{name}",
                "text-size": 12,
                "text-font": [
                    "Noto Sans Regular"
                ]
            },
            "paint": {
                "text-color": "#444",
                "text-halo-color": "#fff",
                "text-halo-width": 1
            }
        }
    ]
}